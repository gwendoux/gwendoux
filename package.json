{
  "name": "gwendoux",
  "version": "2.1.5",
  "description": "my personal website",
  "main": "www/index.html",
  "repository": "git@github.com:gwendoux/gwendoux.git",
  "keywords": [
    "personal",
    "javascript",
    "css",
    "html"
  ],
  "author": "gwendoux",
  "license": "ISC",
  "watch": {
    "build:svg": "svg/{index, resume}/*.svg",
    "build:css:index": {
      "patterns": "www/less/**/*",
      "extensions": "less",
      "ignore": "www/less/resume.less"
    },
    "build:css:resume": "www/less/resume.less"
  },
  "scripts": {
    "lint:js": "eslint .",
    "lint:js:fix": "eslint --fix .",
    "lint:css": "stylelint --syntax less www/less/**/*.less",
    "postinstall": "npm prune",
    "start": "browser-sync start --config bs-config.js",
    "build:css:index": "mkdirp www/css && lessc www/less/main.less | postcss -u autoprefixer -u pixrem -c postcss.json | cleancss > www/css/main.min.css",
    "build:css:resume": "mkdirp www/css && lessc www/less/resume.less | postcss -u autoprefixer -u pixrem -c postcss.json | cleancss > www/css/resume.min.css",
    "prebuild:css": "rimraf www/css/**",
    "build:css": "parallelshell 'npm run build:css:index' 'npm run build:css:resume'",
    "prebuild:js": "rimraf www/js/*.min.*",
    "build:js": "browserify www/js/lib/behavior.js | uglifyjs - --verbose --stats --compress --screw-ie8 > www/js/script.min.js",
    "build:js:watch": "watchify www/js/lib/behavior.js -o www/js/script.min.js -v",
    "prebuild:svg": "rimraf www/svg/* && mkdir -p www/svg",
    "build:svg": "spritesh --input svg/index/ --output www/svg/ss--index-icons.svg --prefix icon- && spritesh --input svg/resume/ --output www/svg/ss--resume-icons.svg --prefix icon-",
    "prebuild": "npm run lint:js && npm run lint:css",
    "build": "npm run build:css && npm run build:js && npm run build:svg",
    "clean": "rimraf  www/svg/* www/js/*.min.* www/css/** dist",
    "prepackage": "rimraf dist && npm run build",
    "package": "ncp www/ dist",
    "postpackage": "rimraf dist/less dist/svg/index dist/svg/resume dist/svg/stock dist/js/lib .DS_Store",
    "push:prod": "rsync -avzP --update --delete-before --exclude .well-known dist/ gwendoux:/usr/share/nginx/www",
    "safefreeze": "rm -rf node_modules npm-shrinkwrap.json && npm install && npm prune && npm dedupe && npm run lint && npm shrinkwrap",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "autoprefixer": "6.3.6",
    "browser-sync": "^2.12.12",
    "browserify": "13.0.1",
    "clean-css": "^3.4.17",
    "convict": "^1.4.0",
    "eslint": "^2.11.1",
    "less": "2.7.1",
    "mkdirp": "0.5.1",
    "ncp": "2.0.0",
    "npm-watch": "^0.1.4",
    "parallelshell": "2.0.0",
    "pixrem": "^3.0.1",
    "postcss-cli": "2.5.2",
    "rimraf": "2.5.2",
    "spritesh": "1.2.0",
    "stylelint": "6.5.1",
    "uglify-js": "2.6.2",
    "watchify": "3.7.0"
  },
  "dependencies": {
    "jsonp": "0.2.0",
    "loglevel": "^1.4.1",
    "moment": "2.13.0",
    "url": "0.11.0"
  }
}
